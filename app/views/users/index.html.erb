<div class="container">
  <h2>Users</h2>          
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th> Action </th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Show", "/#{user.username}" %> </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
